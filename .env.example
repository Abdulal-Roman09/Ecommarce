# -----------------------
# App Configuration
# -----------------------
NODE_ENV=development
PORT=5000
SALT_ROUND=12

# -----------------------
# JWT Settings
# -----------------------
JWT_SECRET=your_jwt_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
EXPIRES_IN=30d
REFRESH_TOKEN_EXPIRES_IN=1y

# -----------------------
# Password Reset
# -----------------------
RESET_PASS_TOKEN=your_reset_token_here
RESET_PASS_TOKEN_EXPIRES_IN=5m
RESET_PASS_LINK=http://localhost:5000/api/v1/auth/reset-password

# -----------------------
# Email Configuration
# -----------------------
EMAIL=your_email@gmail.com
APP_PASS=your_email_app_password

# -----------------------
# Cloudinary
# -----------------------
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# -----------------------
# Database
# -----------------------
DATABASE_URL=postgresql://DB_USER:DB_PASSWORD@localhost:DB_PORT/DB_NAME?schema=public

DB_USER=postgres
DB_PASSWORD=123456
DB_NAME=ecommerce
DB_PORT=5432

# -----------------------
# Gemini API
# -----------------------
GEMINI_API_KEY=your_gemini_api_key

# -----------------------
# OpenRouter / OpenAI
# -----------------------
OPENROUTER_API_KEY=your_openrouter_api_key

# -----------------------
# PgAdmin
# -----------------------
PGADMIN_EMAIL=admin@gmail.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5051

# -----------------------
# File Watching (optional)
# -----------------------
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=100
